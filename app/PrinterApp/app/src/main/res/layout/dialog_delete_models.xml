<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_files_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_margin_small"
            android:src="@drawable/ic_delete" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/DialogContent"
                android:id="@+id/new_folder_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/library_menu_models_delete_files" />

            <TextView
                style="@style/DialogContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/library_menu_models_delete_undo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/content_padding_small">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_padding_xsmall"
            android:src="@drawable/ic_action_delete"
            android:visibility="invisible" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/content_margin_normal">

            <ImageView
                android:id="@+id/file_image_bottom"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/random"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/file_image_medium"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="@dimen/content_margin_small"
                android:visibility="visible"
                android:scaleType="centerCrop"
                android:src="@drawable/random"/>

            <ImageView
                android:id="@+id/file_image_top"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/content_margin_normal"
                android:layout_marginTop="@dimen/content_margin_normal"
                android:src="@drawable/random"
                android:visibility="visible"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/DialogContent"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:textColor="@color/body_text_1"
                android:id="@+id/files_num_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView
                style="@style/DialogContent"
                android:id="@+id/file_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem_ipsum.stl"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>