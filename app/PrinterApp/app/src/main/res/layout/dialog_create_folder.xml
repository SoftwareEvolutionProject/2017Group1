<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/content_padding_small">

        <ImageView
            android:id="@+id/delete_files_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/content_margin_small"
            android:src="@drawable/ic_folder_grey600_36dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_folder_name_textview"
                style="@style/DialogContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="@string/library_create_folder_name"
                android:textColor="@color/body_text_1" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/new_folder_name_edittext"
                app:baseColor="@color/theme_accent_1"
                app:errorColor="@color/theme_error"
                app:primaryColor="@color/theme_accent_1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium">

                <requestFocus />
            </com.rengwuxian.materialedittext.MaterialEditText>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>