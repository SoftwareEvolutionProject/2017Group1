<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/history_icon_imageview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/random"
        android:focusable="false"
        android:padding="@dimen/content_padding_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_drawer_model"
                style="@style/TextHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/content_padding_normal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_drawer_printtime_title"
                android:textColor="@color/body_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_drawer_print_time" />

            <TextView
                android:id="@+id/history_drawer_printtime"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/body_text_2"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/history_drawer_type"
                style="@style/TextHeaderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/history_drawer_date"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/body_text_2"
                android:textStyle="italic"
                android:gravity="right"
                android:paddingRight="@dimen/content_padding_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>




    </LinearLayout>



</LinearLayout>