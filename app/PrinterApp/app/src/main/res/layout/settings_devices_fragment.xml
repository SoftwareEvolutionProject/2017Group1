<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- Title -->
    <TextView
        style="@style/SettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/settings_printers"/>

    <View
        style="@style/HorizontalSeparator"
        android:layout_marginTop="@dimen/content_margin_small" />

    <!-- List of linked devices -->
    <ListView
        android:id="@+id/lv_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/content_padding_xsmall"
        android:paddingRight="@dimen/content_padding_xsmall"/>

</LinearLayout>