<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/content_padding_small">

    <FrameLayout
        android:id="@+id/framesnapshot"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:foreground="@drawable/icon_empty_models"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">


        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="@dimen/content_margin_small"
            app:matProg_barColor="@color/theme_accent_1"
            app:matProg_progressIndeterminate="true" />

        <TextView
            style="@style/DialogContent"
            android:layout_gravity="center"
            android:id="@+id/creatingproject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/generating_screenshot" />

    </LinearLayout>

</LinearLayout>
