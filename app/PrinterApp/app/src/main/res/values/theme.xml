<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   -->
    <style name="AppBaseTheme.Green" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/pager_background</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <!-- Action bar -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_1</item>
        <!--<item name="actionModeCloseDrawable">@drawable/ic_action_done</item>-->
        <!--<item name="actionModeStyle">@style/AppBaseTheme.Green.ActionMode</item>-->
        <item name="actionModeBackground">@color/theme_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="actionBarItemBackground">@drawable/actionbar_item_selector</item>
        <!-- Menu -->
        <!--<item name="android:popupMenuStyle">@style/PopupMenu.Green</item>-->
        <item name="textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearanceSmall
        </item>
        <item name="android:listPreferredItemHeightSmall">@dimen/popup_menu_item_height</item>
        <!--<item name="actionDropDownStyle">@style/DropDownNav.Green</item>-->
        <item name="dropDownListViewStyle">@style/DropDownListView.Gray</item>
        <!-- Spinner -->
        <!--<item name="android:dropDownSpinnerStyle">@style/Spinner.Green</item>-->
        <!-- Button -->
        <item name="android:buttonStyle">@style/Button.Green</item>
        <!-- Seek bar -->
        <item name="android:seekBarStyle">@style/SeekBar.Green</item>
        <!-- Progress bar -->
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar.Green</item>
        <!-- Edit  text-->
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="AppBaseTheme.Green.NoActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Styles for action bar and action bar tabs -->
    <style name="AppBaseTheme.Green.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/AppBaseTheme.Green.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppBaseTheme.Green.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for the action mode -->
    <style name="AppBaseTheme.Green.ActionMode">
        <item name="android:background">@drawable/selectable_rect_background_green</item>
        <!--<item name="android:backgroundSplit">?android:attr/actionModeSplitBackground</item>-->
        <!--<item name="android:titleTextStyle">@style/AppBaseTheme.Green.ActionBar.TitleTextStyle</item>-->
    </style>

    <!-- Styles for the pup up menu -->
    <style name="PopupMenu.Green" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_green</item>

    </style>

    <style name="PopupMenu.TextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="PopupMenu.TextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="DropDownListView.Gray" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_rect_background_gray</item>
    </style>

    <style name="DropDownNav.Green" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_green</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_green</item>
        <item name="android:backgroundSplit">?android:attr/actionModeSplitBackground</item>
        <item name="android:dropDownSelector">@drawable/selectable_rect_background_green</item>
    </style>

    <!--Dropdown listView style-->
    <style name="AppBaseTheme.Green.DropDownListViewStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Buttons style -->
    <style name="Button.Green" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_background</item>
    </style>

    <!-- Spinner style -->
    <style name="Spinner.Green" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/green_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/green_list_selector_holo_light</item>>
    </style>

    <!-- SeekBar style -->
    <style name="SeekBar.Green" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/green_seekbar_background</item>
        <item name="android:indeterminateDrawable">@drawable/green_seekbar_background</item>
        <item name="android:thumb">@drawable/green_seekbar_thumb</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBar.Green" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/green_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">
            @drawable/green_progress_indeterminate_horizontal_holo_light
        </item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:layout_marginBottom">-8dp</item>
        <item name="android:layout_marginTop">-8dp</item>
    </style>

    <!-- Edit text -->
    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/body_text_2</item>
    </style>
</resources>