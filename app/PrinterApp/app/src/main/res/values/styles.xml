<resources>

    <!-- Navigation drawer -->
    <style name="NavigationDrawer">
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/almost_white</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">@dimen/navigation_drawer_divider_height</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="NavigationDrawerItem" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/navdrawer_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_margin</item>
        <item name="android:paddingRight">@dimen/navigation_drawer_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Separation line -->
    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/separation_line_horizontal</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/separation_line_horizontal</item>
    </style>

    <!-- Seek bar -->
    <style name="TallerSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/green_seekbar_height_background</item>
        <item name="android:indeterminateDrawable">@drawable/green_seekbar_height_track</item>
        <item name="android:thumb">@drawable/green_seekbar_thumb</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

    <!-- Edit text -->
    <style name="AdvancedSettingsEditText">
        <item name="android:textColor">@color/body_text_1_selector</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- Material design buttons -->
    <style name="MaterialDesignButton">
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MaterialDesignButton.Raised">
        <item name="paper_color">@color/white</item>
        <item name="paper_text_color">@color/body_text_1</item>
    </style>

    <style name="MaterialDesignButton.Raised.Default">
        <item name="paper_color">@color/theme_primary_dark</item>
        <item name="paper_text_color">@color/white</item>
    </style>

    <style name="MaterialDesignButton.Flat">
        <item name="paper_color">@color/paper_button_color_transparent</item>
        <item name="paper_shadow_color">@color/paper_button_color_transparent</item>
        <item name="paper_text_color">@color/body_text_1</item>
    </style>

    <style name="MaterialDesignButton.Flat.Default">
        <item name="paper_color">@color/paper_button_color_transparent</item>
        <item name="paper_shadow_color">@color/paper_button_color_transparent</item>
        <item name="paper_text_color">@color/theme_primary_dark</item>
    </style>

    <!-- Button bar style -->
    <style name="ButtonBar" parent="android:Holo.Light.ButtonBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ButtonBar.NoDefaultButton" parent="android:Holo.ButtonBar.AlertDialog">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/selectable_rect_background_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">2dip</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonBar.DefaultButton" parent="ButtonBar.NoDefaultButton">
        <item name="android:background">@drawable/selectable_rect_background_green</item>
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Action button -->
    <style name="ActionButton">
        <item name="android:background">@drawable/action_button_selector_dark</item>
        <item name="android:padding">@dimen/content_padding_small</item>
        <item name="android:layout_marginBottom">@dimen/content_margin_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_1_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2_selector</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeaderSubLight" parent="TextHeaderSub">
        <item name="android:textColor">@color/body_text_3</item>
    </style>

    <style name="TextBodyDark">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TextBodyLight" parent="TextBodyDark">
        <item name="android:textColor">@color/body_text_3</item>
    </style>

    <style name="TextInfo">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="DialogContent">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">3dip</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="NavigationMenuItem" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/selectable_rect_background_gray</item>
        <item name="android:textColor">@color/navmenu_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/content_padding_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SelectedNavigationMenuItem" parent="NavigationMenuItem">
        <item name="android:textColor">@color/navmenu_text_color_selected</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTitle" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/content_padding_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsSectionTitle" parent="SettingsTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="SettingsDeviceTitle" parent="SettingsTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="SettingsDeviceInfo" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/body_text_3</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/content_padding_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Library styles -->
    <style name="ModelName" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/content_padding_xsmall</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="ModelDate" parent="android:TextAppearance">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>"
        <item name="android:padding">@dimen/content_padding_xsmall</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_3</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <!-- Print view action button -->
    <style name="PrintViewActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/printview_action_button_padding</item>
        <item name="android:background">@drawable/selectable_oval_background_dark_gray</item>
    </style>

    <!-- Animations -->

    <style name="PopupMenuAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_popupmenu</item>
        <item name="android:windowExitAnimation">@anim/slide_out_popupmenu</item>
    </style>

    <style name="SlideLeftAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SlideRightAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <!-- Material dialog pro theme -->
    <style name="Theme.AlertDialogPro.Material.Light.Green" parent="Base.Theme.AlertDialogPro.Material.Light">
        <item name="adpLayout">@layout/adp_alert_dialog_material</item>
        <item name="adpHorizontalProgressLayout">@layout/adp_progress_dialog_horizontal_material</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.AlertDialogPro.Material.Light.Button</item>
    </style>

    <style name="Base.Widget.AlertDialogPro.Material.Light.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/adp_btn_mtrl_light</item>
        <item name="android:textColor">@color/theme_accent_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">@dimen/adp_mtrl_alert_dialog_button_bar_height</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:maxLines">2</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
